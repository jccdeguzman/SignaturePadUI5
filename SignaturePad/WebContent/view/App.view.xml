<mvc:View controllerName="com.test.SignatureSample.controller.App" xmlns:core="sap.ui.core" xmlns:html="http://www.w3.org/1999/xhtml" xmlns:mvc="sap.ui.core.mvc"
	displayBlock="true" xmlns="sap.m">
	<App id="idAppControl">
		<pages>
			<Page title="Digital Signature Pad">
				<content>
					<HBox id="canvas-container" alignContent="Center" alignItems="Center">
						<core:HTML id="html"></core:HTML>
					</HBox>
					<VBox>
						<HBox>
							<Button id="Signature" text="Signature" press="onSign"></Button>
							<Button id="Save" text="Save" press="saveButton"></Button>
							<Button id="clear" text="Clear" press="clearButton"></Button>
						</HBox>
					</VBox>
				</content>
			</Page>
		</pages>
	</App>
</mvc:View>