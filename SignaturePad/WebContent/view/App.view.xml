<mvc:View
	controllerName="com.test.SignatureSample.controller.App"
	xmlns:core="sap.ui.core" xmlns:html="http://www.w3.org/1999/xhtml"
	xmlns:mvc="sap.ui.core.mvc" displayBlock="true" xmlns="sap.m">
	<App id="idAppControl">
		<pages>
			<Page class="main-page" title="Digital Signature Pad">
				<content>
					<HBox class="canvas-container" alignContent="Center"
						alignItems="Center">
						<core:HTML id="html"></core:HTML>
					</HBox>
				</content>
				<footer>
					<Toolbar>
						<ToolbarSpacer />
						<Button id="Signature" type="Emphasized" text="Signature" press="onSign"></Button>
						<Button id="Save" type="Accept" text="Save" press="saveButton"></Button>
						<Button id="clear" type="Reject" text="Clear" press="clearButton"></Button>
					</Toolbar>
				</footer>
			</Page>
		</pages>
	</App>
</mvc:View>